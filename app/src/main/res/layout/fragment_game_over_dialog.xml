<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.area23.archon.dialogfragment.GameOver">

    <GridLayout
        android:id="@+id/GridLayoutBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:columnCount="1"
        android:rowCount="2"
        android:stretchMode="columnWidth">

        <LinearLayout
            android:id="@+id/r1"
            android:tag="@string/s_row1"
            android:layout_height="64dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:minHeight="64dp"
            android:maxHeight="72dp"
            android:minWidth="240dp"
            android:maxWidth="360dp"
            android:layout_row="0"
            android:background="#654acc"
            android:layout_column="0">

            <ImageView
                android:id="@+id/imgViewHeader"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:minWidth="240dp"
                android:maxWidth="360dp"
                android:minHeight="64dp"
                android:maxHeight="72dp"
                android:background="#654acc"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/header"
                tools:ignore="ImageContrastCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/r0"
            android:tag="@string/s_row0"
            android:layout_height="36dp"
            android:layout_width="match_parent"
            android:background="#990000"
            android:orientation="vertical"
            android:minHeight="32dp"
            android:maxHeight="64dp"
            android:minWidth="240dp"
            android:maxWidth="360dp"
            android:layout_row="1"
            android:layout_column="0">
            <ImageView
                android:id="@+id/imgViewGameOver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ba0bb7"
                android:minHeight="36dp"
                android:maxHeight="48dp"
                android:layout_gravity="center"
                android:contentDescription="@string/msg_game_over"
                android:scaleType="center"
                android:src="@drawable/message_gameover"
                tools:ignore="ImageContrastCheck" />
        </LinearLayout>
        
    </GridLayout>



</FrameLayout>